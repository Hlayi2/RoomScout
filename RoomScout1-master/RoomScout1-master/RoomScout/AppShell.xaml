<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RoomScout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tabpages="clr-namespace:RoomScout.Views"
    xmlns:studentViews="clr-namespace:RoomScout.Views.StudentSide" 
    xmlns:authViews="clr-namespace:RoomScout.Views.Auth"
    Title="RoomScout">



    

    <!--Initial Landing page-->
    <ShellContent
        
        Route="LandingPage"
        ContentTemplate="{DataTemplate authViews:LoginPage}"/>

    <ShellContent 
    Route="register" 
    ContentTemplate="{DataTemplate authViews:RegisterPage}">
        <Shell.BackButtonBehavior>
            <BackButtonBehavior IsEnabled="False" />
        </Shell.BackButtonBehavior>
    </ShellContent>


    <!--Tab Navigation-->
    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home_24.png"
            Route="HomePage"
            ContentTemplate="{DataTemplate tabpages:HomePage}"/>
        <ShellContent
            Title="Catgory"
            Icon="category_24.png"
            Route="CategoryPage"
            ContentTemplate="{DataTemplate tabpages:CategoryPage}"/>
        <ShellContent
            Title="Profile"
            Icon="profile_24.png"
            Route="ProfilePage"
            ContentTemplate="{DataTemplate tabpages:ProfilePage}"/>

    </TabBar>
</Shell>