<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomScout.Views.StudentSide.Appointments"
             Title="Appointments"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#1A1F25">

    <VerticalStackLayout Spacing="20" Padding="20">
        <!-- Refresh Button -->
        <Button Text="Refresh"
                BackgroundColor="#76ABAE"
                TextColor="White"
                FontSize="16"
                CornerRadius="10"
                HorizontalOptions="End"
                Clicked="OnRefreshClicked" />

        <!-- List of Appointments -->
        <RefreshView IsRefreshing="{Binding IsRefreshing}"
             Command="{Binding RefreshCommand}">
            <CollectionView x:Name="AppointmentsCollectionView"
                        SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="10">
                            <VerticalStackLayout Spacing="10">
                                <!-- Profile Picture and Name -->
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="{Binding ProfilePicture}"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Aspect="AspectFill"
                                       Clip="Ellipse" />

                                    <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                                </HorizontalStackLayout>

                                <!-- Confirmation Message -->
                                <Label Text="{Binding ConfirmationMessage}"
                                   FontSize="14"
                                   FontAttributes="Italic"
                                   TextColor="{Binding StatusColor}"
                                   Padding="10" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </VerticalStackLayout>
   
</ContentPage>