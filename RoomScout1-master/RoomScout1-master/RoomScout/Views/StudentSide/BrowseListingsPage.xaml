<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:RoomScout.Models.Location"
             xmlns:viewmodel="clr-namespace:RoomScout.ViewModels.StudentSide"
             xmlns:converters="clr-namespace:RoomScout.Converters"
             x:Class="RoomScout.Views.StudentSide.BrowseListingsPage"
             x:DataType="viewmodel:BrowseListingsViewModel"
             BackgroundColor="#1A1F25"
             Shell.NavBarIsVisible="False"
             Title="Browse Listings">

    <ScrollView>
        <VerticalStackLayout Spacing="15"
                             Padding="10">

            <!-- Top Navigation Section -->
            <HorizontalStackLayout VerticalOptions="Center"
                                   Spacing="20" 
                                   Padding="15">
                <!-- View All -->
                <Frame CornerRadius="15" 
                       Padding="0"
                       BackgroundColor="#76ABAE" 
                       HeightRequest="90"
                       WidthRequest="90" 
                       HorizontalOptions="Center">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         Spacing="5">
                        <Image Source="overview.png" 
                               HeightRequest="30"
                               WidthRequest="30"
                               Aspect="AspectFit" 
                               Margin="0,10"/>
                        <Label Text="View All" 
                               TextColor="White"
                               FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Book Viewing -->
                <Frame CornerRadius="15"
                       Padding="0" 
                       BackgroundColor="#76ABAE"
                       HeightRequest="90"
                       WidthRequest="90"
                       HorizontalOptions="Center">
                    <VerticalStackLayout HorizontalOptions="Center" 
                                         Spacing="5">
                        <Image Source="booking.png"
                               HeightRequest="30"
                               WidthRequest="30"
                               Aspect="AspectFit" 
                               Margin="0,10"/>
                        <Label Text="Book Viewing"
                               TextColor="White" 
                               FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Profile Frame -->
                <Frame CornerRadius="15" Padding="0" Background="White" 
                       HeightRequest="100" WidthRequest="110" HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddEventTapped"/>
                    </Frame.GestureRecognizers>
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Image Source="prof.png" HeightRequest="40" WidthRequest="40"
                               Aspect="AspectFit" Margin="0,20,0,10"/>
                        <Label Text="Profile" TextColor="Black" FontSize="15"/>
                <!-- Profile -->
                <Frame CornerRadius="15"
                       Padding="0"
                       BackgroundColor="#76ABAE"
                       HeightRequest="90" 
                       WidthRequest="90"
                       HorizontalOptions="Center">
                    <VerticalStackLayout HorizontalOptions="Center" 
                                         Spacing="5">
                        <Image Source="profiles.png"
                               HeightRequest="30" 
                               WidthRequest="30"
                               Aspect="AspectFit"
                               Margin="0,10"/>
                        <Label Text="Profile" 
                               TextColor="White" 
                               FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

          
            <!-- Filter Section -->
            <Label Text="Filter by Room Type" 
                   TextColor="White" 
                   FontSize="25" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Start"/>

            <HorizontalStackLayout VerticalOptions="Center" 
                                   Spacing="20" Padding="15">
                <Button Text="Bachelor"
                        Clicked="OnBachelorClicked"
                        BorderColor="#76ABAE"
                        BorderWidth="2"
                        Background="White"
                        TextColor="Black"
                        FontSize="15" 
                        FontAttributes="Bold"
                        HeightRequest="40"
                        CornerRadius="5"/>

                <Button Text="Sharing"
                        Clicked="OnSharingClicked"
                        BorderColor="#76ABAE" 
                        BorderWidth="2"
                        Background="White" 
                        TextColor="Black"
                        FontSize="15" 
                        FontAttributes="Bold"
                        HeightRequest="40" 
                        CornerRadius="5"/>

                <Button Text="Single" 
                        Clicked="OnSingleClicked"
                        BorderColor="#76ABAE"
                        BorderWidth="2"
                        Background="White"
                        TextColor="Black"
                        FontSize="15" 
                        FontAttributes="Bold"
                        HeightRequest="40" 
                        CornerRadius="5"/>
            </HorizontalStackLayout>


            <!-- Room Listings -->
            <CollectionView x:Name="MainCollectionView"
                            ItemsSource="{Binding Rooms}"
                            Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:RoomLocation">
                        <Frame Margin="10" Padding="0" CornerRadius="15" 
                               BackgroundColor="#31363C" BorderColor="#76ABAE">
                            <Grid RowDefinitions="Auto,Auto">
                                <!-- Carousel View -->
                                <CarouselView ItemsSource="{Binding Images}" 
                                              HeightRequest="150" 
                                              Grid.Row="0">
                                    <CarouselView.ItemTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding ., Converter={StaticResource Base64Converter}}"
                                                   Aspect="AspectFill"/>
                                        </DataTemplate>
                                        
                                    </CarouselView.ItemTemplate>
                                </CarouselView>

                                <!-- Details Section -->
                                <VerticalStackLayout Grid.Row="1"
                                                     Padding="15" 
                                                     Spacing="8">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding RoomType}" 
                                               TextColor="White"
                                               FontSize="16"
                                               FontAttributes="Bold"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Price, StringFormat='R{0}/Month'}"
                                               TextColor="#76ABAE" FontSize="16" 
                                               FontAttributes="Bold"/>
                                    </Grid>

                                    <Label Text="{Binding Address}"
                                           TextColor="#A0A0A0" 
                                           FontSize="14"/>
                                    <Label Text="Available" 
                                           TextColor="#76ABAE" 
                                           FontSize="14"/>

                                    <!-- Add Status binding -->
                                    <Label Text="{Binding Status}" 
                                           TextColor="#76ABAE" 
                                           FontSize="14"/>

                                    <!-- Amenities -->
                                    <FlexLayout BindableLayout.ItemsSource="{Binding Amenities}"
                                                Wrap="Wrap" 
                                                Margin="0,5,0,0">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <Frame Padding="8,4"
                                                       Margin="0,0,5,5"
                                                       Background="#76ABAE" 
                                                       CornerRadius="5"
                                                       HasShadow="False">
                                                    <Label Text="{Binding}" 
                                                           TextColor="White"
                                                           FontSize="12"/>
                                                </Frame>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </FlexLayout>


                                    <Button Text="Book for Viewing" 
                                            CornerRadius="10"
                                            Margin="0,10"
                                            BackgroundColor="#76ABAE"
                                            TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BrowseListingsViewModel}}, Path=BookCommand}"
                                            CommandParameter="{Binding .}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>