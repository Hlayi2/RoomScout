<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:converters="clr-namespace:RoomScout.Converters"
             x:Class="RoomScout.Views.StudentSide.ChatPage"
             Title="Chat"
             BackgroundColor="#E2F1E7">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="15">
        <Image Source="chatbot.png" 
         HorizontalOptions="Center"
         HeightRequest="100"/>

        <!-- Chat History Display -->
        <ScrollView x:Name="ChatHistoryScrollView" HeightRequest="300">
            <VerticalStackLayout Spacing="10">
                <CollectionView x:Name="ChatHistoryList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5">
                                <Frame Margin="5" Padding="10"
                                 BackgroundColor="{Binding IsUser, Converter={StaticResource BoolToColorConverter}}"
                                 HorizontalOptions="{Binding IsUser, Converter={StaticResource BoolToAlignmentConverter}}">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Message}" 
                                         TextColor="Black"
                                         LineBreakMode="WordWrap"/>
                                        <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}"
                                         FontSize="10"
                                         TextColor="Gray"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!-- Typing Indicator -->
                <Frame x:Name="TypingIndicator" 
                     IsVisible="False"
                     Padding="10"
                     Margin="5"
                     BackgroundColor="White"
                     HorizontalOptions="Start">
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Roomy is typing..." 
                             TextColor="Gray"
                             FontSize="12"/>
                        <ActivityIndicator IsRunning="True" 
                         HeightRequest="20" 
                         WidthRequest="20"
                         Color="Gray"/>
                    </HorizontalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Yes/No Buttons -->
        <Grid x:Name="YesNoButtons" 
    IsVisible="False"
    ColumnDefinitions="*,*"
    ColumnSpacing="10"
    Margin="0,10,0,0">
            <Button Grid.Column="0"
          Text="Yes"
          Clicked="OnYesClicked"
          BackgroundColor="#7ED4AD"
          TextColor="White"
          FontAttributes="Bold"/>
            <Button Grid.Column="1"
          Text="No"
          Clicked="OnNoClicked"
          BackgroundColor="#FF6B6B"
          TextColor="White"
          FontAttributes="Bold"/>
        </Grid>
        <!-- User Input Section -->
        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
            <Entry x:Name="UserInput" 
             Grid.Column="0"
             Placeholder="Type your message here..."
             ReturnCommand="{Binding SendMessageCommand}"/>
            <Button Grid.Column="1"
              Text="Send"
              Clicked="OnSendMessageClicked"
              BackgroundColor="#7ED4AD"
              TextColor="White"
              FontAttributes="Bold"/>
        </Grid>
    </VerticalStackLayout>

</ContentPage>