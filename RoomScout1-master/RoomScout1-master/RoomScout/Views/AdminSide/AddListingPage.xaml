<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="RoomScout.Views.AdminSide.AddListingPage"
             Shell.NavBarIsVisible="False"
             Title="AddListingPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1A1F25">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Header -->
            <Label 
                Text="Add My Listing"
                TextColor="White"
                FontSize="32"
                FontAttributes="Bold"/>

            <!-- Address and Location Section -->
            <Label Text="Address Details:" 
                   TextColor="White"
                   FontAttributes="Bold"/>
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   BorderColor="#76ABAE"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Entry x:Name="StreetEntry"
                           Placeholder="Street Address"
                           PlaceholderColor="#666666"
                           TextColor="White"
                           BackgroundColor="#444444"/>

                    <Entry x:Name="SuburbEntry"
                           Placeholder="Suburb"
                           PlaceholderColor="#666666"
                           TextColor="White"
                           BackgroundColor="#444444"/>

                    <Entry x:Name="CityEntry"
                           Placeholder="City"
                           PlaceholderColor="#666666"
                           TextColor="White"
                           BackgroundColor="#444444"/>

                    <Entry x:Name="PostalCodeEntry"
                           Placeholder="Postal Code"
                           PlaceholderColor="#666666"
                           TextColor="White"
                           BackgroundColor="#444444"
                           Keyboard="Numeric"
                           MaxLength="4"/>

                    <!-- Coordinates and Map Section -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Entry Grid.Column="0"
                               x:Name="CoordinatesEntry"
                               Placeholder="Coordinates (Click on map to set)"
                               PlaceholderColor="#666666"
                               TextColor="White"
                               BackgroundColor="#444444"
                               IsReadOnly="True"/>
                    </Grid>

                    <!-- Map Control -->
                    <Frame Padding="0" 
                           HeightRequest="200" 
                           IsClippedToBounds="True">
                        <maps:Map x:Name="locationMap"
                                 IsShowingUser="True"
                                 IsZoomEnabled="True"
                                 IsScrollEnabled="True"
                                 MapType="Street"
                                 MapClicked="OnMapClicked"/>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Contact Numbers Section -->
            <Label Text="Contact Numbers:" 
                   TextColor="White"
                   FontAttributes="Bold"/>
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   BorderColor="#76ABAE"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <!-- Primary Contact -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Entry Grid.Column="0"
                               x:Name="PrimaryPhoneEntry"
                               Placeholder="Primary Contact Number"
                               PlaceholderColor="#666666"
                               TextColor="White"
                               BackgroundColor="#444444"
                               Keyboard="Telephone"
                               MaxLength="10"/>

                        <Button Grid.Column="1"
                                Text="ðŸ“ž"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                Margin="5,0,0,0"
                                Clicked="OnDialNumberClicked"
                                CommandParameter="{Binding Source={x:Reference PrimaryPhoneEntry}, Path=Text}"/>
                    </Grid>

                    <!-- Alternative Contact -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Entry Grid.Column="0"
                               x:Name="AlternativePhoneEntry"
                               Placeholder="Alternative Contact Number (Optional)"
                               PlaceholderColor="#666666"
                               TextColor="White"
                               BackgroundColor="#444444"
                               Keyboard="Telephone"
                               MaxLength="10"/>

                        <Button Grid.Column="1"
                                Text="ðŸ“ž"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                Margin="5,0,0,0"
                                Clicked="OnDialNumberClicked"
                                CommandParameter="{Binding Source={x:Reference AlternativePhoneEntry}, Path=Text}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Room Type Section -->
            <Label Text="Type of Room:"
                  TextColor="White"
                  FontAttributes="Bold"/>
            <Picker x:Name="RoomTypePicker"
                    BackgroundColor="#333333"
                    TextColor="White">
                <Picker.Items>
                    <x:String>Select an option</x:String>
                    <x:String>Single Room</x:String>
                    <x:String>Bachelor Room</x:String>
                    <x:String>Sharing Room</x:String>
                </Picker.Items>
            </Picker>

            <!-- Price Section -->
            <Label Text="Price:" 
                   TextColor="White"/>
            <Frame BackgroundColor="#333333" 
                   Padding="0" 
                   BorderColor="#76ABAE"
                   CornerRadius="5"
                   IsClippedToBounds="True">
                <Grid ColumnDefinitions="Auto,*">
                    <Label Text="R" 
                           TextColor="White"
                           VerticalOptions="Center"
                           Padding="10,0"
                           FontSize="16"/>
                    <Entry Grid.Column="1"
                           x:Name="PriceEntry"
                           TextColor="White"
                           Keyboard="Numeric"
                           BackgroundColor="#333333"
                           TextChanged="OnPriceTextChanged"/>
                </Grid>
            </Frame>

            <!-- Pros Section -->
            <Label Text="Pros:" 
                   TextColor="White"/>
            <Frame BackgroundColor="#333333" 
                   BorderColor="#76ABAE"
                   Padding="15" 
                   CornerRadius="10">
                <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*" 
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                      RowSpacing="10" 
                      ColumnSpacing="10">
                    <!-- Row 0 -->
                    <CheckBox Grid.Row="0" Grid.Column="0" x:Name="WifiCheck" VerticalOptions="Center" Margin="-6,0,0,0"/>
                    <Label Text="Wifi" 
                           TextColor="White" 
                           VerticalOptions="Center" 
                           Grid.Row="0" Grid.Column="1" 
                           Margin="-20,0,0,0"/>

                    <CheckBox Grid.Row="0" Grid.Column="2" x:Name="FreeElectricityCheck" VerticalOptions="Center" Margin="-30,0,0,0"/>
                    <Label Text="Free Electricity" 
                           TextColor="White" 
                           VerticalOptions="Center" 
                           Grid.Row="0" Grid.Column="3" 
                           Margin="-20,0,0,0"/>

                    <CheckBox Grid.Row="0" Grid.Column="4" x:Name="BedCheck" VerticalOptions="Center" Margin="-20,0,0,0"/>
                    <Label Text="Bed" 
                           TextColor="White" 
                           VerticalOptions="Center" 
                           Grid.Row="0" Grid.Column="5" 
                           Margin="-20,0,0,0"/>

                    <!-- Row 1 -->
                    <CheckBox Grid.Row="1" Grid.Column="0" x:Name="WashingMachineCheck" VerticalOptions="Center" Margin="-6,0,0,0"/>
                    <Label Text="Washing Machine" 
                           TextColor="White" 
                           VerticalOptions="Center" 
                           Grid.Row="1" Grid.Column="1" 
                           Margin="-20,0,0,0"/>

                    <CheckBox Grid.Row="1" Grid.Column="2" x:Name="StudyTableCheck" VerticalOptions="Center" Margin="-30,0,0,0"/>
                    <Label Text="Study Table" 
                           TextColor="White" 
                           VerticalOptions="Center" 
                           Grid.Row="1" Grid.Column="3" 
                           Margin="-20,0,0,0"/>

                    <CheckBox Grid.Row="1" Grid.Column="4" x:Name="ShowersCheck" VerticalOptions="Center" Margin="-20,0,0,0"/>
                    <Label Text="Showers" 
                           TextColor="White" 
                           VerticalOptions="Center" 
                           Grid.Row="1" Grid.Column="5" 
                           Margin="-20,0,0,0"/>

                    <!-- Add remaining pros rows... -->
                </Grid>
            </Frame>

            <!-- Additional Information Section -->
            <Label Text="Additional Information:" 
                   TextColor="White"/>
            <Editor x:Name="AdditionalInfoEditor"
                    BackgroundColor="#333333" 
                    TextColor="White" 
                    HeightRequest="100"/>

            <!-- Rules Section -->
            <Label Text="Rules and Regulations:" 
                   TextColor="White"/>
            <Frame BackgroundColor="#333333" 
                   Padding="15" 
                   BorderColor="#76ABAE"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*, Auto">
                        <Entry x:Name="RuleEntry"
                               TextColor="White"
                               PlaceholderColor="#666666"
                               Placeholder="Enter a rule..."
                               BackgroundColor="#444444"/>
                        <Button Grid.Column="1"
                                Text="Add"
                                Clicked="OnAddRuleClicked"
                                BackgroundColor="#81B7B7"
                                Margin="5,0,0,0"/>
                    </Grid>

                    <CollectionView x:Name="RulesList"
                                  HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="Auto, *, Auto" 
                                      Padding="5">
                                    <Label Text="{Binding Number}" 
                                           TextColor="White"
                                           WidthRequest="30"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding Text}" 
                                           TextColor="White"/>
                                    <Button Grid.Column="2"
                                            Text="âœ•"
                                            BackgroundColor="Transparent"
                                            TextColor="Red"
                                            Clicked="OnDeleteRuleClicked"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Image Upload Section -->
            <Label Text="Upload images:" 
                   TextColor="White"/>
            <Button Text="Upload file(s)" 
                    BackgroundColor="#333333" 
                    TextColor="White"
                    Clicked="OnUploadClicked"/>
            <Label x:Name="FileNameLabel" 
                   Text="No file chosen" 
                   TextColor="#666666"/>

            <!-- Submit Button -->
            <Button Text="Upload Room" 
                    BackgroundColor="#81B7B7" 
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="0,20,0,0"
                    Clicked="OnSubmitClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>